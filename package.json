{
  "name": "progress.js",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "bundle": "browserify src/progress.js -o lib/progress.bundle.js -t [ babelify --presets es2015 ] -t browserify-css",
    "build": "npm run cleanMinifiedFile && npm run bundle && npm run uglify && npm run cleanBundleFile",
    "uglify": "uglifyjs lib/progress.bundle.js -o lib/progress.min.js",
    "cleanMinifiedFile": "rm lib/progress.min.js",
    "cleanBundleFile": "rm lib/progress.bundle.js",
    "test": "eslint src",
    "serve": "browser-sync start --server demo --files lib --files demo --serveStatic lib --reload-delay 100 --reload-debounce 1000",
    "dev": "npm run bundle && npm run serve",
    "watch": "watch 'npm run bundle' src/",
    "start": "npm run dev & npm run watch"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "babel-core": "^6.13.2",
    "babel-preset-es2015": "^6.13.2",
    "babelify": "^7.3.0",
    "browser-sync": "^2.14.0",
    "browserify": "^13.1.0",
    "browserify-css": "^0.9.1",
    "eslint": "^3.2.2",
    "eslint-config-airbnb": "^10.0.0",
    "eslint-plugin-import": "^1.13.0",
    "eslint-plugin-jsx-a11y": "^2.1.0",
    "eslint-plugin-react": "^6.0.0",
    "uglify-js": "^2.7.0",
    "watch": "^0.19.1"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "eslintConfig": {
    "extends": [
      "airbnb"
    ],
    "rules": {
      "semi": [
        2,
        "never"
      ],
      "comma-dangle": [
        "error",
        "never"
      ],
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": true
        }
      ]
    }
  }
}
